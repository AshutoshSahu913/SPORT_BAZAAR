<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SPORTBAZAAR" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <!--        <item name="colorPrimary">@color/purple_500</item>-->
        <!--        <item name="colorPrimaryVariant">@color/purple_700</item>-->

        <item name="colorPrimary">#fca311</item>
        <item name="colorPrimaryVariant">#e5e5e5</item>

        <item name="colorOnPrimary">#ffffff</item>
<!--        <item name="colorOnPrimary">@color/backgroundColor</item>-->
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#fca311</item>
        <item name="colorSecondaryVariant">#e5e5e5</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:fontFamily">@font/rubik_black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">#000000</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="Theme.SPORTBAZAAR.ActionBar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/app_color</item>
        <item name="colorPrimaryVariant">#e5e5e5</item>
        <item name="colorOnPrimary">@color/backgroundColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/app_color</item>
        <item name="colorSecondaryVariant">#e5e5e5</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="Theme.SPORTBAZAAR.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SPORTBAZAAR.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SPORTBAZAAR.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>