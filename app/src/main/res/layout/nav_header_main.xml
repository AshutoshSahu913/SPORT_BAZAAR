<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:orientation="horizontal"
    android:theme="@style/Theme.SPORTBAZAAR.ActionBar">



<LinearLayout
    android:layout_width="match_parent"
    android:layout_weight="1"
    android:orientation="vertical"
    android:layout_margin="4dp"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        app:cardCornerRadius="100dp"
        android:backgroundTint="@color/black"
        android:layout_margin="4dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/customerImage"
            android:layout_width="match_parent"
            android:layout_height="100dp"

            android:layout_gravity="center"
            android:src="@drawable/man2"
            tools:ignore="ContentDescription,ImageContrastCheck" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/customerName"
        android:layout_width="wrap_content"
        android:fontFamily="@font/rubik_black"
        android:layout_height="wrap_content"
        android:hint="@string/customer_name"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        android:padding="1dp"
        tools:ignore="Autofill,SmallSp,TouchTargetSizeCheck" />


    <TextView
        android:id="@+id/numberHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:hint="@string/xxxxxxxxxx"
        android:imeOptions="actionDone"
        android:fontFamily="@font/rubik_black"
        android:importantForAutofill="no"
        android:textColorHint="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        tools:ignore="SmallSp,TextViewEdits,TouchTargetSizeCheck" />


</LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/header_img"/>
</LinearLayout>